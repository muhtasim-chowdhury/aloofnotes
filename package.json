{
  "name": "node-js-getting-started",
  "version": "0.3.0",
  "description": "A sample Node.js app using Express 4",
  "engines": {
    "node": "10.x"
  },
  "main": "server.js",
  "scripts": {
    "start": "webpack && node bundle.js",
    "build": "webpack",
    "build-client": "npm run build --prefix ./client",
    "now": "node bundle.js",
    "dev": "concurrently \"webpack --watch\" \"nodemon bundle.js\"",
    "client": "npm run start --prefix ./client",
    "both": "concurrently \"npm run now\"  \"npm run start --prefix ./client\" ",
    "heroku-postbuild": "webpack -p" 
  },
  "dependencies": {
    "apollo-boost": "^0.1.23",
    "apollo-server-express": "^2.3.1",
    "cors": "^2.8.5",
    "express": "^4.15.2",
    "graphql": "^14.0.2",
    "mongoose": "^5.4.1"
  },
  "devDependencies": {
    "concurrently": "^4.1.0",
    "nodemon": "^1.18.9",
    "webpack": "4.19.1",
    "webpack-cli": "^3.1.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/heroku/node-js-getting-started"
  },
  "keywords": [
    "node",
    "heroku",
    "express"
  ],
  "license": "MIT"
}
